@model IEnumerable<CineLogic.Models.Directeur>

@{
    ViewBag.Title = "Index des directeurs";
}

<h2 class="border-left border-bottom border-info m-4 p-4">Index des directeurs</h2>

<p class="p-3, m-3">
    @Html.ActionLink("Ajouter un directeur", "Create")
</p>
<table class="table m-4">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>

        <th></th>
       <th>Nbr de film qu'il a dirigé  :</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>

            <td>
                @Html.ActionLink("Editer", "Edit", new { id = item.Nom }, new { @class = "btn btn-outline-info" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Nom }, new { @class = "btn btn-outline-warning" }) |
                @{
                    if (item.Contenus.Count == 0)
                    {
                        @Html.ActionLink("Supprimer", "Delete", new { id = item.Nom }, new { @class = "btn  btn-outline-danger" })
                    }
                    else
                    {
                        <button type="button" class="btn btn-outline-danger " disabled data-toggle="tooltip" data-placement="top" title="Suppression interdite le directeur est assigné à un film">Supprimer</button>
                    }
                }
            </td>
            <td>
                <div>@item.Contenus.Count</div>
            </td>
        </tr>
    }

</table>
