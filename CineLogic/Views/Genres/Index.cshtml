@model IEnumerable<CineLogic.Models.Genre>

@{
    ViewBag.Title = "Index des genres";
}

<h2 class="border-left border-bottom border-info m-4 p-4">Index des genres</h2>

<p class="m-4">
    @Html.ActionLink("Ajouter un genre", "Create")
</p>
<div class="m-4">
    <table class="table m-4">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.ActionLink("Editer", "Edit", new { id = item.Nom }, new { @class = "btn btn-outline-info" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Nom }, new { @class = "btn btn-outline-warning" })
                    @*@Html.ActionLink("Supprimer", "Delete", new { id=item.Nom }, new { @class = "btn  btn-outline-danger" })*@
                </td>
            </tr>
        }
    </table>
</div>
