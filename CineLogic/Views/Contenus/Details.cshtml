@model CineLogic.Models.Contenu

@{
    ViewBag.Title = "Details";
}

<h2 class="border-left border-bottom border-info m-4 p-4">Details du film</h2>
<div class="d-flex justify-content-between">
<div>
    @*<h4>Contenu</h4>
        <hr />*@
    <dl class="dl-horizontal m-4">
        <dt>
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            <br />
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Annee)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Annee)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RuntimeMins)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RuntimeMins)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rating)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Votes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Votes)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Revenue)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Revenue)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MetaScore)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MetaScore)
        </dd>

    </dl>
</div>

<div class="d-flex justify-content-center">
    <div class="border-bottom border-left border-info m-4">
        <h6 class="alert-info">Liste des acteurs</h6>
        <table class="table">
            @foreach (var item in Model.Acteurs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="border-bottom border-left border-info m-4">
        <h6 class="alert-info">Liste des directeurs</h6>
        <table class="table">
            @foreach (var item in Model.Directeurs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
</div>




<p>
    @Html.ActionLink("Editer", "Edit", new { id = Model.Titre }) |
    @Html.ActionLink("Index des films", "Index")
</p>



