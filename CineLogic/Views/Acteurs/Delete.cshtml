@model CineLogic.Models.Acteur

@{
    ViewBag.Title = "Delete";
}

<h2 class="border-left border-bottom border-info m-4 p-4">Supprimer un acteur</h2>

<h3 class="alert alert-danger m-4">Voulez-vous vraiment supprimer cet acteur ?</h3>
<div>

    <dl class="dl-horizontal m-4">

        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color m-4">
            <input type="submit" value="Supprimer" class="btn btn-outline-danger" /> |
            @Html.ActionLink("Index des acteurs", "Index")
        </div>
    }
</div>
