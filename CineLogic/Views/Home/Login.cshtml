@model CineLogic.Models.User

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Login";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body>
    <div class="jumbotron">
        <div id="login-div">

            @using (Html.BeginForm("LoginAutoriser", "Home", FormMethod.Post))
            {<br><br><br><br>
                <table>
                    <tr>
                        <td></td>
                        <td style="text-decoration:underline">Connexion</td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Login)
                        </td>

                        <td>
                            @Html.EditorFor(model => model.Login)
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>@Html.ValidationMessageFor(model => model.Login)</td>
                    </tr>
                    <tr>

                    <tr>
                        <td>@Html.LabelFor(model => model.Motdepasse)</td>
                        <td>@Html.EditorFor(model => model.Motdepasse)</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>@Html.ValidationMessageFor(model => model.Motdepasse)</td>
                    </tr>



                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" name="nameLogin" value="Login" />
                        </td>
                    </tr>
                </table>
                <br><br><br><br>
            }
            @using (Html.BeginForm("Create", "Users", FormMethod.Get))
            {
                <table>
                    <tr>
                        <td></td>
                        <td style="text-decoration:underline">Inscription</td>
                    </tr>
                    <tr>
                        <td><b>Première utilisation?</b></td>
                        <td>
                            <input type="submit" name="inscription" value="S’inscrire" />
                        </td>
                    </tr>
                </table>
            }

        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>


